<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="200dp" app:srcCompat="@mipmap/escudocatolica"
                android:id="@+id/imageView2" android:verticalScrollbarPosition="defaultPosition"
                android:visibility="visible" android:layout_marginTop="10dp"/>
        <EditText
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/txtUser"/>
        <EditText
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txtPassword"/>
        <Button
                android:text="Iniciar Sesión"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"    android:background="@drawable/button_rounded"
                android:textColor="@android:color/black"
                android:onClick="login"/>
        <TextView
                android:text="¿Olvidas tu contraseña?"
                android:gravity="center"
                android:layout_width="match_parent"

                android:onClick="forgotPassword"

                android:layout_height="42dp"
                android:layout_margin="10dp"
                android:marqueeRepeatLimit="marquee_forever"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>